# SmartCare Backend Environment Variables

# Application
DEBUG=True
PROJECT_NAME=SmartCare API

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/smartcare

# Redis
REDIS_URL=redis://localhost:6379

# AI Model (optional - rule-based triage works without it)
AI_MODEL_PATH=./ai/models/trained/triage_model.pkl
USE_ML_MODEL=False

# CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
